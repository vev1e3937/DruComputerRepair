<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@id/relativeLayout"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:orientation="horizontal">


        <GridLayout
            style="@style/MatchWrap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:id="@+id/tv_dete"
                style="@style/TextViewLargeApplicationSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:text="วันที่แจ้งซ่อม"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_agency"
                style="@style/TextViewLargeApplicationSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="หน่วยงาน"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_room"
                style="@style/TextViewLargeApplicationSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left"
                android:text="ห้อง"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_detail"
                style="@style/TextViewLargeApplicationSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="left"
                android:text="อาการที่เสีย"
                android:textSize="18sp" />
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/CardView.Dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สถานะการซ่อม" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="85dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_baseline_build_24" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>